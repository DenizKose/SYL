<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="@string/about_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/about_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textAlignment="center"
                android:layout_marginBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" />

            <TextView
                android:text="@string/about_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/about_desc"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:linksClickable="true" />

            <TextView
                android:text="@string/about_thanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/about_thanks"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:linksClickable="true"
                android:textAlignment="center" />

            <TextView
                android:text="@string/changelog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/changelog"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textAlignment="center"
                android:layout_marginBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" />

            <TextView
                android:text="@string/changelist4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/changelog4"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:layout_marginBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" />

            <TextView
                android:text="@string/changelist3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/changelog3"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:layout_marginBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" />

            <TextView
                android:text="@string/changelist2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/changelog2"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" />

            <TextView
                android:text="@string/changelist1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/changelog1"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:layout_marginBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>